{
  "scripts": {
    "node-sass": "node-sass --watch --output-style compressed -o public/css src/style.scss",
    "tailwindcss": "npx tailwindcss -i ./src/input.css -o ./public/css/tw.css --watch",
    "start": "concurrently \"npm run node-sass\" \"npm run tailwindcss\""
  },
  "dependencies": {
    "node-sass": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "tailwindcss": "^3.3.2"
  }
}